<!DOCTYPE html>
<html>
  <head>
    <title>Mango Music</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="shortcut icon" type="image/png" href="<%= image_url('mango-logo.png')%>"/>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.12/css/all.css" integrity="sha384-G0fIWCsCzJIMAVNQPfjH08cyYaUtMwjJwqiRKxxE/rx96Uroj1BtIQ6MLJuheaO9" crossorigin="anonymous">
    <script type="text/javascript">
      window.mangoURL = "<%= image_url('mango-logo.png')%>";
      window.upsellURL = "<%= image_url('upsell.png')%>";
      window.defaultalbumURL = "<%= image_url('blank_album_cover.png')%>";
      window.testalbumURL = "<%= image_url('test-album.png')%>";
      window.porterURL = "<%= image_url('porter-image.png')%>";
      window.porter2URL = "<%= image_url('porter2-image.png')%>";
      window.myPicURL = "<%= image_url('artist.JPG')%>";
      window.playlistURL = "<%= image_url('playlist_logo.png')%>";
    </script>

    <meta property="og:title" content="Mango Music" />
    <meta property="og:image" content="<%= image_url('dispimg.png')%>" />
    <meta property="og:description" content="Simply an Apple Music clone">
    <meta property="og:url" content="https://mango-music.herokuapp.com/">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
 